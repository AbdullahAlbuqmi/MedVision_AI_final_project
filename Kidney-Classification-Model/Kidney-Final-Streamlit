 = \"Arabic\" if st.session_state.language == \"English\" else \"English\"\n","\n","st.sidebar.button(\n","    \"🌐 \" + (\"Switch to Arabic\" if st.session_state.language == \"English\" else \"Switch to English\"),\n","    on_click=toggle_language\n",")\n","\n","# Texts Definition (EN / AR)\n","EN = {\n","    \"title\": \"AI Medical Assistant\",\n","    \"subtitle\": \"Kidney CT Classification System\",\n","    \"intro\": \"Upload your kidney CT scan below and let our AI analyze it.\",\n","    \"upload\": \" Upload a Kidney CT Image\",\n","    \"analyze\": \"Analyze Image\",\n","    \"no_issue_msg\": \" The kidney appears normal.\",\n","    \"result_msg\": \" Signs of **{pred}** detected. Please consult your doctor for further diagnosis.\"\n","}\n","\n","AR = {\n","    \"title\": \" المساعد الطبي الذكي\",\n","    \"subtitle\": \"نظام تصنيف صور الأشعة للكلى\",\n","    \"intro\": \"قم برفع صورة الأشعة المقطعية للكلى، وسيتولى الذكاء الاصطناعي تحليلها\",\n","    \"upload\": \" ارفع صورة CT للكلى\",\n","    \"analyze\": \"تحليل الصورة\",\n","    \"no_issue_msg\": \" الكلى طبيعية ولا توجد أي مشاكل.\",\n","    \"result_msg\": \" تم رصد مؤشرات على **{pred}**، يُفضل مراجعة الطبيب المختص لتأكيد التشخيص.\"\n","}\n","\n","TEXT = EN if st.session_state.language == \"English\" else AR\n","\n","# UI Styling\n","st.title(TEXT[\"title\"])\n","st.subheader(TEXT[\"subtitle\"])\n","st.markdown(TEXT[\"intro\"])\n","\n","# Model Handling\n","local_model_path = '/content/Kidney_CT_Classifier_clean_dense.h5'\n","drive_model_path = '/content/drive/MyDrive/Capstone AI Medical Assistant /Kidney_CT_Classifier_clean_dense.h5'\n","\n","if not os.path.exists(local_model_path):\n","    shutil.copy(drive_model_path, local_model_path)\n","\n","@st.cache_resource\n","def load_model():\n","    return tf.keras.models.load_model(local_model_path)\n","\n","model = load_model()\n","class_names = [\"Normal\", \"Stone\"]\n","\n","# Image Upload Section\n","uploaded_file = st.file_uploader(TEXT[\"upload\"], 